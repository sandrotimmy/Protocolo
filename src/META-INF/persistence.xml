      <property name="hibernate.connection.dialect" value=" org.hibernate.dialect.FirebirdDialect"/>
      <property name="hibernate.connection.driver_class" value="org.firebirdsql.jdbc.FBDriver"/>
      <property name="javax.persistence.jdbc.url" value="jdbc:firebirdsql:localhost/3050:C://Users/administrador/Documents/RepositorioGIT/ProtocoloDeDocumentos/banco/ProtocoloDB.FDB"/>
      <property name="javax.persistence.jdbc.user" value="sysdba"/>
      <property name="javax.persistence.jdbc.password" value="masterkey"/>
    </properties>
  </persistence-unit>
</persistence>
